<div class="signing-bg">
  <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
    <div class="panel panel-default login-panel">
      <h2>Înregistrare</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true, label: "Adresa e-mail" %>
          <%= f.input :name, required: true, label: "Nume" %>
          <%= f.input :password, required: true, hint: ("cel puțin #{@minimum_password_length} caractere" if @validatable), label: "Parolă" %>
          <%= f.input :password_confirmation, required: true, label: "Parola din nou"%>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Înregistrează-te" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>